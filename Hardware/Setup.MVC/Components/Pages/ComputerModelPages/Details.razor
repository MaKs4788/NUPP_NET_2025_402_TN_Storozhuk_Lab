@page "/computermodels/details"
@using Microsoft.EntityFrameworkCore
@using Setup.Infrastructure.Models
@inject IDbContextFactory<Setup.Infrastructure.SetupContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>ComputerModel</h2>
    <hr />
    @if (computermodel is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@computermodel.Name</dd>
            <dt class="col-sm-2">RAM</dt>
            <dd class="col-sm-10">@computermodel.RAM</dd>
            <dt class="col-sm-2">Storage</dt>
            <dd class="col-sm-10">@computermodel.Storage</dd>
        </dl>
        <div>
            <a href="@($"/computermodels/edit?id={computermodel.Id}")">Edit</a> |
            <a href="@($"/computermodels")">Back to List</a>
        </div>
    }
</div>

@code {
    private ComputerModel? computermodel;

    [SupplyParameterFromQuery]
    private Guid Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        computermodel = await context.Computers.FirstOrDefaultAsync(m => m.Id == Id);

        if (computermodel is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
