@page "/computermodels/edit"
@using Microsoft.EntityFrameworkCore
@using Setup.Infrastructure.Models
@inject IDbContextFactory<Setup.Infrastructure.SetupContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>ComputerModel</h2>
<hr />
@if (ComputerModel is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="ComputerModel" OnValidSubmit="UpdateComputerModel" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="ComputerModel.Id" value="@ComputerModel.Id" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="ComputerModel.Name" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => ComputerModel.Name" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="ram" class="form-label">RAM:</label>
                    <InputNumber id="ram" @bind-Value="ComputerModel.RAM" class="form-control" />
                    <ValidationMessage For="() => ComputerModel.RAM" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="storage" class="form-label">Storage:</label>
                    <InputNumber id="storage" @bind-Value="ComputerModel.Storage" class="form-control" />
                    <ValidationMessage For="() => ComputerModel.Storage" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/computermodels">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private Guid Id { get; set; }

    [SupplyParameterFromForm]
    private ComputerModel? ComputerModel { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        ComputerModel ??= await context.Computers.FirstOrDefaultAsync(m => m.Id == Id);

        if (ComputerModel is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateComputerModel()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(ComputerModel!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!ComputerModelExists(ComputerModel!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/computermodels");
    }

    private bool ComputerModelExists(Guid id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Computers.Any(e => e.Id == id);
    }
}
