@page "/computermodels/delete"
@using Microsoft.EntityFrameworkCore
@using Setup.Infrastructure.Models
@inject IDbContextFactory<Setup.Infrastructure.SetupContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>ComputerModel</h2>
    <hr />
    @if (computermodel is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@computermodel.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">RAM</dt>
            <dd class="col-sm-10">@computermodel.RAM</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Storage</dt>
            <dd class="col-sm-10">@computermodel.Storage</dd>
        </dl>
        <EditForm method="post" Model="computermodel" OnValidSubmit="DeleteComputerModel" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(computermodel is null)">Delete</button> |
            <a href="/computermodels">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private ComputerModel? computermodel;

    [SupplyParameterFromQuery]
    private Guid Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        computermodel = await context.Computers.FirstOrDefaultAsync(m => m.Id == Id);

        if (computermodel is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteComputerModel()
    {
        using var context = DbFactory.CreateDbContext();
        context.Computers.Remove(computermodel!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/computermodels");
    }
}
